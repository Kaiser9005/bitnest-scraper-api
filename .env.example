# BitNest Scraper API - Environment Configuration
# Copy this file to .env and configure your values

# Server Configuration
PORT=8080
NODE_ENV=production
LOG_LEVEL=info

# Security - REQUIRED
# Generate a secure API key and configure the SAME key in Google Apps Script
BITNEST_API_KEY=your-secret-api-key-here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000      # 1 hour in milliseconds
RATE_LIMIT_MAX_REQUESTS=60        # Max requests per window

# Cache Configuration
CACHE_TTL_MS=300000               # 5 minutes - prevents hammering bitnest.me

# Playwright Configuration
PLAYWRIGHT_TIMEOUT_MS=30000       # 30 seconds navigation timeout
PLAYWRIGHT_WAIT_MS=5000           # 5 seconds wait for JavaScript to load

# Retry Configuration
MAX_RETRIES=3                     # Number of retry attempts
RETRY_DELAY_MS=2000               # Base delay between retries (exponential backoff)
